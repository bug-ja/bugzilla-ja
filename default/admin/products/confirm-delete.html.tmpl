[%# INTERFACE:
  # product: Bugzilla::Product object; The product
  #
  # (classification fields available if Param('useclassification') is enabled:)
  #
  # classification: Bugzilla::Classification object; The classification 
  #                                                  the product is in
  #
  #%]

[% title = BLOCK %]プロダクト '[% product.name FILTER html %]' の削除
[% END %]

[% PROCESS global/header.html.tmpl
  title = title
  style_urls = ['skins/standard/admin.css']
%]

[% IF classification %]
  [% classification_url_part = BLOCK %]&amp;classification=
    [%- classification.name FILTER url_quote %]
  [%- END %]
[% ELSE %]
  [% classification_url_part = "" %]
[% END %]

<table border="1" cellpadding="4" cellspacing="0">
  <tr bgcolor="#6666FF">
    <th valign="top" align="left">フィールド</th>
    <th valign="top" align="left">値</th>
  </tr>

  [% IF Param('useclassification') %]
    <tr>
      <td>classification:</td>
      <td>[% classification.name FILTER html %]</td>
    </tr>
    <tr>
      <td>classification の説明:</td>
      [%# descriptions are intentionally not filtered to allow html content %]
      <td>
        [% IF classification.description %]
          [% classification.description FILTER html_light %]
        [% ELSE %]
          <span style="color: red">(無し)</span>
        [% END %]
      </td>
    </tr>
  [% END %]

  <tr>
    <td valign="top">プロダクト:</td>
    <td valign="top">
      <a href="editproducts.cgi?product=[% product.name FILTER url_quote %]
         [%- classification_url_part %]">
        [% product.name FILTER html %]
      </a>
    </td>
  </tr>
  <tr>
    <td valign="top">説明:</td>
    [%# descriptions are intentionally not filtered to allow html content %]
    <td valign="top">
      [% IF product.description %]
        [% product.description FILTER html_light %]
      [% ELSE %]
        <span style="color: red">(無し)</span>
      [% END %]
    </td>
  </tr>

  [% IF Param('usetargetmilestone') %]
    <tr>
      <td>Milestone の URL:</td>
      <td>
        [% IF product.milestone_url %]
          <a href="[% product.milestone_url FILTER html %]">
            [%- product.milestone_url FILTER html %]
          </a>
        [% ELSE %]
          無し
        [% END %]
      </td>
    </tr>
  [% END %]

  <tr>
    <td>[% terms.Bug %] が新規登録できるか:</td>
    <td>
      [% IF product.disallownew %]
        不可能
      [% ELSE %]
        可能
      [% END %]
    </td>
  </tr>

  <tr>
    <td>
      [% IF product.components.size > 0 %]
        <a href="editcomponents.cgi?product=[% product.name FILTER url_quote %]
           [%- classification_url_part %]"
           title="プロダクト '[% product.name FILTER html %]' のコンポーネントの編集">
          コンポーネント:
        </a>
      [% ELSE %]
        コンポーネント:
      [% END %]
    </td>
    <td>
      [% IF product.components.size > 0 %]
        <table>
          [% FOREACH c = product.components %]
            <tr>
              <th align="right">[% c.name FILTER html %]:</th>
              [%# descriptions are intentionally not filtered to allow html content %]
              <td>
                [% IF c.description %]
                  [% c.description FILTER html_light %]
                [% ELSE %]
                  <span style="color: red">(無し)</span>
                [% END %]
              </td>
            </tr>
          [% END %]
        </table>
      [% ELSE %]
        無し
      [% END %]
    </td>
  </tr>

  <tr>
    <td>
      [% IF product.versions.size > 0 %]
        <a href="editversions.cgi?product=[%- product.name FILTER url_quote %]
           [%- classification_url_part %]">
          バージョン:
        </a>
      [% ELSE %]
        バージョン:
      [% END %]
    </td>
    <td>
      [% IF product.versions.size > 0 %]
        [% FOREACH v = product.versions %]
          [% v.name FILTER html %]<br>
        [% END %]
      [% ELSE %]
        無し
      [% END %]
    </td>
  </tr>


  [% IF Param('usetargetmilestone') %]
    <tr>
      <td valign="top">
        [% IF product.milestones.size > 0 %]
          <a href="editmilestones.cgi?product=[%- product.name FILTER url_quote %]
             [%- classification_url_part -%]">
            マイルストーン:
          </a>
        [% ELSE %]
          マイルストーン:
        [% END %]
      </td>
      <td>
        [% IF product.milestones.size > 0 %]
          [% FOREACH m = product.milestones %]
            [% m.name FILTER html %]<br>
          [% END %]
        [% ELSE %]
          無し
        [% END %]
      </td>
    </tr>
  [% END %]

  <tr>
    <td>[% terms.Bugs %]:</td>
    <td>
      [% IF product.bug_count %]
        <a href="buglist.cgi?product=[%- product.name FILTER url_quote %]
           [%- classification_url_part %]"
           title="プロダクト '[%- product.name FILTER html %]' の [% terms.bugs %] リスト">
          [% product.bug_count FILTER html %]
        </a>
      [% ELSE %]
        無し
      [% END %]
    </td>
  </tr>
</table>

<h2>確認</h2>

[% IF product.bug_count %]

  [% IF !Param("allowbugdeletion") %]

    <p>
    [% IF product.bug_count > 1 %]
      [% product.bug_count FILTER html %] [%+ terms.bugs %]
    [% ELSE %]
      1 [% terms.bug %]
    [% END %]
    がこのプロダクトに登録されています。

    これらの [% terms.bug %] を他のプロダクトへ移動させなければ、
    削除することはできません。

  [% ELSE %]

    <table border="0" cellpadding="20" width="70%" bgcolor="red">
      <tr>
        <td>
          このプロダクトに
          [% IF product.bug_count > 1 %]
            [% product.bug_count FILTER html %] [%+ terms.bugs %]
          [% ELSE %]
            1 [% terms.bug %]
          [% END %]
          が登録されていました!
          このプロダクトを削除する場合、<b><blink>全ての</blink></b>
          ストアされた [% terms.bugs %] とその履歴も削除されます。
        </td>
      </tr>
    </table>

  [% END %]

[% END %]

[% IF product.bug_count == 0 || Param('allowbugdeletion') %]

  <p>本当にこのプロダクトを削除してもよろしいですか?</p>

  <form method="post" action="editproducts.cgi">
    <input type="submit" id="delete" value="はい、削除します">
    <input type="hidden" name="action" value="delete">
    <input type="hidden" name="product" value="[% product.name FILTER html %]">
    <input type="hidden" name="token" value="[% token FILTER html %]">
    <input type="hidden" name="classification"
           value="[% classification.name FILTER html %]">
  </form>

[% END %]

[% PROCESS admin/products/footer.html.tmpl %]

[% PROCESS global/footer.html.tmpl %]
