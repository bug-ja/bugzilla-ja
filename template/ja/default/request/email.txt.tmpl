[% PROCESS global/variables.none.tmpl %]

[% bugidsummary = bug.bug_id _ ': ' _ bug.short_desc %]
[% attidsummary = attachment.id _ ': ' _ attachment.description %]
[% statuses = { '+' => "承認" , '-' => '拒否' , 'X' => "キャンセル" ,
                '?' => "要求" } %]

[% to_identity = "" %]
[% on_behalf_of = 0 %]
[% IF flag.status == '?' %]
  [% subject_status = "が要求されました" %]
  [% IF flag.setter.id == user.id %]
    [% to_identity = flag.requestee.identity _ " へ" %]
  [% ELSE %]
    [% on_behalf_of = 1 %]
    [% IF flag.requestee %][% to_identity = flag.requestee.identity %][% END %]
  [% END %]
[% ELSE %]
  [% IF flag.requester %]
    [% to_identity = flag.requester.identity _ " が要求していた" %]
  [% END %]
  [% subject_status = "が" _ statuses.${flag.status} _ "されました" %]
[% END %]
From: [% Param('mailfrom') %]
To: [% to %]
Subject: [% flag.type.name %] [%+ subject_status %]: [[% terms.Bug %] [%+ bug.bug_id %]] [% bug.short_desc %]
[%- IF attachment %] :
  [添付 [% attachment.id %]] [% attachment.description FILTER clean_text %][% END %]
X-Bugzilla-Type: request
[%+ threadingmarker %]

[%+ USE wrap -%]
[%- FILTER bullet = wrap(80) -%]

[% IF on_behalf_of %]
[% user.identity %] は
[% flag.setter.identity %] が要求していた
 [% flag.type.name %] の要求先を [% to_identity %] へ変更しました:
[% ELSE %]
[% user.identity %] は [%+ to_identity %]
[%+ flag.type.name %] を [% statuses.${flag.status} %] しました:
[% END %]

[% terms.Bug %] [%+ bugidsummary %]
[% END %]
[%+ urlbase %]show_bug.cgi?id=[% bug.bug_id %]
[% IF attachment %]

[% FILTER bullet = wrap(80) %]
添付 [% attidsummary %]
[%- END %]
[%+ urlbase %]attachment.cgi?id=[% attachment.id %]&action=edit
[%- END %]
[%- FILTER bullet = wrap(80) %]

[% USE Bugzilla %]
[%-# .defined is necessary to avoid a taint issue in Perl < 5.10.1, see bug 509794. %]
[% IF Bugzilla.cgi.param("comment").defined && Bugzilla.cgi.param("comment").length > 0 %]
------- [% user.identity %] からの コメント
[%+ Bugzilla.cgi.param("comment") %]
[% END %]

[%- END %]
