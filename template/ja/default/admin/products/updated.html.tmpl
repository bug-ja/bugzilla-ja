[%# INTERFACE:
  # product : Bugzilla::Product Object; new product.
  # classification: Bugzilla::Classification Object; The product classification (may be empty or missing)
  # changes: hashref with all changes made to the product. Each key is an edited field,
  #          and its value is an arrayref of the form [old values, new values].
  #%]

[% IF classification %]
  [% classification_text = BLOCK %]
    classification '[% classification.name FILTER html %]' の
  [% END %]
[% END %]

[% title = BLOCK %][% classification_text FILTER none %] プロダクト '[% product.name FILTER html %]' 
                   を変更しました[% END %]
[% PROCESS global/header.html.tmpl
  title = title
  style_urls = ['skins/standard/admin.css']
%]

[% PROCESS "global/field-descs.none.tmpl" %]

[% IF changes.name.defined %]
  <p>
  プロダクト名を '[% changes.name.0 FILTER html %]' から
  <a href="editproducts.cgi?action=edit&amp;product=
  [%- product.name FILTER url_quote %]">[% product.name FILTER html %]</a> に変更しました。
  </p>
[% END %]


[% IF changes.description.defined %]
  <p>
    変更後の説明:
  </p>
  <p style="margin: 1em 3em 1em 3em">[% product.description FILTER html_light %]</p>
[% END %]

[% IF changes.isactive.defined %]
  <p>
  [% terms.bugs %] の新規報告が
  [% IF product.is_active %]
    可能
  [% ELSE %]
    不可能
  [% END %]
  になりました。
  </p>
[% END %]

[% IF changes.defaultmilestone.defined %]
  <p>
  既定のマイルストーンが '[% changes.defaultmilestone.0 FILTER html %]' から
  '[% product.default_milestone FILTER html %]' に変更されました。
  </p>
[% END %]
[% IF changes.allows_unconfirmed.defined %]
  <p>
  [% IF product.allows_unconfirmed %]
    このプロダクトで
    [%+ display_value('bug_status', 'UNCONFIRMED') FILTER html %] ステータスにすることができます。
  [% ELSE %]
    このプロダクトでは
    [%+ display_value('bug_status', 'UNCONFIRMED') FILTER html %] ステータスにすることができなくなりました。
    すべての現存する
    <a href="buglist.cgi?product=
            [%- product.name FILTER url_quote %]&amp;bug_status=UNCONFIRMED"> ステータスの
    [%- terms.bugs %] は
    [%+ display_value('bug_status', 'UNCONFIRMED') FILTER html %] ステータス</a>
    に変更されるまでとどまります。
  [% END %]
  </p>
[% END %]

[% Hook.process('changes') %]

[% IF !changes.keys.size %]
  <p>'[% product.name FILTER html %]' は変更されませんでした。</p>
[% END %]

[% PROCESS admin/products/footer.html.tmpl %]

[% PROCESS global/footer.html.tmpl %]
